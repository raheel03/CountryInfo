@model CountryInfo.Models.CountrySearchModel

@{
    ViewBag.Title = "Country Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Country Search</h2>

<div class="well well-sm">

    <h3>Search</h3>
    <hr />

    @using (Html.BeginForm("Search", "CountrySearch", FormMethod.Post))
    {
        <fieldset>
            Country Code :
            @Html.TextBoxFor(m => m.Query)
        </fieldset>

        <button class="btn btn-primary"> Search </button>
    }

</div>

<div class="well well-sm">
    @Html.Partial("_CountrySearchResult", Model)
</div>